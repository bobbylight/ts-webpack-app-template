{
	"compilerOptions": {

		"allowJs": false,
		"allowUnreachableCode": false,
		"allowUnusedLabels": false,
		"declaration": false,
		"forceConsistentCasingInFileNames": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		//"noUnusedLocals": true,
		//"noUnusedParameters": true,
		"preserveConstEnums": true,
		"removeComments": false,

		"target": "es5",
		"module": "amd",

		"outDir": "src/js/",
		"sourceMap": true
	},
	"include": [
		"src/modules/**/*.ts",
		"typings/index.d.ts"
	]
}
